@functions {
    public string GetPropertyValue(VwMueksDataFull item, string propertyName)
    {
        var property = item.GetType().GetProperty(propertyName);
        if (property == null) return "";
        
        var value = property.GetValue(item);
        
        // –û—Å–æ–±—ã–µ —Å–ª—É—á–∞–∏
        if (propertyName == "DoorStatus" && value is int intDoorValue)
        {
            return intDoorValue == 1 ? "–û—Ç–∫—Ä—ã—Ç–∞" : intDoorValue == 0 ? "–ó–∞–∫—Ä—ã—Ç–∞" : "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ";
        }
        
        if (propertyName == "Sensor220B" && value is int intSensorValue)
        {
            return intSensorValue == 1 ? "–í–∫–ª—é—á–µ–Ω" : intSensorValue == 0 ? "–í—ã–∫–ª—é—á–µ–Ω" : "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ";
        }
        
        // –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –¥–∞—Ç
        if (value is DateTime dateTimeValue)
        {
            return dateTimeValue.ToString("dd.MM.yyyy HH:mm");
        }
        
        // –î–ª—è –±—É–ª–µ–≤—ã—Ö –∑–Ω–∞—á–µ–Ω–∏–π
        if (value is bool boolValue)
        {
            return boolValue ? "–î–∞" : "–ù–µ—Ç";
        }
        
        // –î–ª—è NULL –∑–Ω–∞—á–µ–Ω–∏–π
        if (value == null)
        {
            return "";
        }
        
        return value.ToString();
    }
