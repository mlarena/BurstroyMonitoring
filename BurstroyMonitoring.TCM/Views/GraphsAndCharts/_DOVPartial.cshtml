@model BurstroyMonitoring.Data.Models.ViewModels.SensorViewModel
@{
    var sensorId = Model.Id;
}

                    @await Html.PartialAsync("_AutoUpdatePartial", new BurstroyMonitoring.Data.Models.ViewModels.AutoUpdateViewModel 
                    { 
                        Prefix = "dov", 
                        Color = "secondary" 
                    })
                    
                    <!-- ВЫБОР ПЕРИОДА -->
                    <div class="d-flex align-items-center ms-3">
                        @await Html.PartialAsync("_TimeRangePartial", new { Prefix = "dov", OutlineColor = "info", ActiveDays = 1 })
                    </div>
                    
                    <!-- ТИП ГРАФИКА -->
                    <div class="d-flex align-items-center ms-3">
                        <span class="text-muted me-2">Тип графика:</span>
                        <div class="btn-group" role="group" id="dovChartStyleRadio">
                            <input type="radio" class="btn-check" name="dovChartStyle" id="dovChartStyleLine" value="line" autocomplete="off" checked>
                            <label class="btn btn-outline-secondary btn-sm" for="dovChartStyleLine">Линейный</label>
                            
                            <input type="radio" class="btn-check" name="dovChartStyle" id="dovChartStyleScatter" value="scatter" autocomplete="off">
                            <label class="btn btn-outline-secondary btn-sm" for="dovChartStyleScatter">Точечный</label>
                        </div>
                    </div>
          