@model BurstroyMonitoring.Data.Models.ViewModels.SensorViewModel

@{
    var sensorId = Model.Id;
}

                    @await Html.PartialAsync("_AutoUpdatePartial", new BurstroyMonitoring.Data.Models.ViewModels.AutoUpdateViewModel 
                    { 
                        Prefix = "mueks", 
                        Color = "danger" 
                    })
                    
                    <!-- ВЫБОР ПЕРИОДА -->
                    <div class="d-flex align-items-center ms-3">
                        @await Html.PartialAsync("_TimeRangePartial", new { Prefix = "mueks", OutlineColor = "danger", ActiveDays = 7 })
                    </div>
                    
                    <!-- ТИП ГРАФИКА -->
                    <div class="d-flex align-items-center ms-3">
                        <span class="text-muted me-2">Тип графика:</span>
                        <div class="btn-group" role="group" id="mueksChartTypeRadio">
                            <input type="radio" class="btn-check" name="mueksChartType" id="mueksChartTypeLine" value="line" autocomplete="off" checked>
                            <label class="btn btn-outline-danger btn-sm" for="mueksChartTypeLine">Линейный</label>
                            
                            <input type="radio" class="btn-check" name="mueksChartType" id="mueksChartTypeScatter" value="scatter" autocomplete="off">
                            <label class="btn btn-outline-danger btn-sm" for="mueksChartTypeScatter">Точечный</label>
                        </div>
                    </div>