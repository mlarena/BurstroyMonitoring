@model BurstroyMonitoring.Data.Models.ViewModels.SensorViewModel

@{
    var sensorId = Model.Id;
}

<div class="bsp-chart-sensor-card">
    <div class="filter-container" style="margin-bottom: var(--spacing-md);">
        <div class="filter-header">
            <div class="d-flex align-center flex-wrap" style="gap: var(--spacing-md); width: 100%;">
                @await Html.PartialAsync("_AutoUpdatePartial", new BurstroyMonitoring.Data.Models.ViewModels.AutoUpdateViewModel 
                { 
                    Prefix = "mueks", 
                    Color = "danger" 
                })
                
                <!-- ВЫБОР ПЕРИОДА -->
                <div class="d-flex align-center">
                    @await Html.PartialAsync("_TimeRangePartial", new { Prefix = "mueks", OutlineColor = "danger", ActiveDays = 7 })
                </div>
                
                <!-- ТИП ГРАФИКА -->
                <div class="d-flex align-center">
                    <span class="text-secondary" style="margin-right: var(--spacing-sm); font-size: 14px;">Тип графика:</span>
                    <div class="btn-group" role="group" id="mueksChartTypeRadio" style="display: flex; gap: 2px;">
                        <input type="radio" class="btn-check" name="mueksChartType" id="mueksChartTypeLine" value="line" autocomplete="off" checked style="display: none;">
                        <label class="button button--sm button--secondary" for="mueksChartTypeLine" style="border-radius: var(--radius-small) 0 0 var(--radius-small);">Линейный</label>
                        
                        <input type="radio" class="btn-check" name="mueksChartType" id="mueksChartTypeScatter" value="scatter" autocomplete="off" style="display: none;">
                        <label class="button button--sm button--secondary" for="mueksChartTypeScatter" style="border-radius: 0 var(--radius-small) var(--radius-small) 0;">Точечный</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div id="mueksChartContainer" class="w-100" style="min-height: 400px;">
        <!-- Здесь будет график MUEKS -->
        <canvas id="mueksChart" class="bsp-chart-canvas"></canvas>
    </div>
</div>