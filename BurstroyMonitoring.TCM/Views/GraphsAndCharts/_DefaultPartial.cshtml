@model BurstroyMonitoring.Data.Models.ViewModels.SensorViewModel

<div class="bsp-chart-sensor-card">
    <div class="details-container" style="max-width: 100%;">
        <div class="details-section">
            <h3 class="details-section-title">Сенсор (@Model.SensorTypeName)</h3>
            
            <div class="details-table" style="margin-bottom: var(--spacing-lg);">
                <div class="details-row">
                    <div class="details-label">Серийный номер</div>
                    <div class="details-value">@Model.SerialNumber</div>
                </div>
                <div class="details-row details-row--primary">
                    <div class="details-label">Точка измерения</div>
                    <div class="details-value">@Model.EndPointsName</div>
                </div>
                <div class="details-row">
                    <div class="details-label">Пост мониторинга</div>
                    <div class="details-value">@Model.MonitoringPostName</div>
                </div>
            </div>
            
            <div class="alert-warning" style="padding: var(--spacing-md);">
                <strong>Информация:</strong> Конфигурация графиков для данного типа сенсора не определена.
            </div>
        </div>
    </div>
</div>