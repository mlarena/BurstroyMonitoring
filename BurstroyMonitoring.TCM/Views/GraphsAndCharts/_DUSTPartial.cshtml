@model BurstroyMonitoring.Data.Models.ViewModels.SensorViewModel

@{
    var sensorId = Model.Id;
}

                    <!-- АВТООБНОВЛЕНИЕ - используем новый компонент -->
                    @await Html.PartialAsync("_AutoUpdatePartial", new BurstroyMonitoring.Data.Models.ViewModels.AutoUpdateViewModel 
                    { 
                        Prefix = "dust", 
                        Color = "warning" 
                    })
                    
                    <!-- ВЫБОР ПЕРИОДА -->
                    <div class="d-flex align-items-center ms-3">
                        @await Html.PartialAsync("_TimeRangePartial", new { Prefix = "dust", OutlineColor = "warning", ActiveDays = 1 })
                    </div>
                    
                    <!-- ТИП ГРАФИКА -->
                    <div class="d-flex align-items-center ms-3">
                        <span class="text-muted me-2">Тип графика:</span>
                        <div class="btn-group" role="group" id="dustChartTypeRadio">
                            <input type="radio" class="btn-check" name="dustChartType" id="dustChartTypeLine" value="line" autocomplete="off" checked>
                            <label class="btn btn-outline-warning btn-sm" for="dustChartTypeLine">Линейный</label>
                            
                            <input type="radio" class="btn-check" name="dustChartType" id="dustChartTypeScatter" value="scatter" autocomplete="off">
                            <label class="btn btn-outline-warning btn-sm" for="dustChartTypeScatter">Точечный</label>
                        </div>
                    </div>
