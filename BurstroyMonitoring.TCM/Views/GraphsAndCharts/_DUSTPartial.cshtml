@model BurstroyMonitoring.Data.Models.ViewModels.SensorViewModel

@{
    var sensorId = Model.Id;
}

<div class="card bsp-chart-sensor-card" id="dustContainer" data-sensor-id="@sensorId">
    <div class="card-header bg-warning text-dark">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-wind"></i> Датчик концентрации пыли (DUST)
            </h5>
            <span class="badge bg-light text-dark">
                <i class="fas fa-barcode"></i> @Model.SerialNumber
            </span>
        </div>
    </div>

    <div class="card-body">
        <!-- Компактная информация -->
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center bg-light p-2 rounded">
                    <!-- УДАЛЕНЫ: EndPointsName и MonitoringPostName -->
                    <div><i class="fas fa-clock text-warning"></i> <span id="dustLastUpdateTime">Загрузка...</span></div>
                    
                    <!-- АВТООБНОВЛЕНИЕ - используем новый компонент -->
                    @await Html.PartialAsync("_AutoUpdatePartial", new BurstroyMonitoring.Data.Models.ViewModels.AutoUpdateViewModel 
                    { 
                        Prefix = "dust", 
                        Color = "warning" 
                    })
                    
                    <!-- ВЫБОР ПЕРИОДА -->
                    <div class="d-flex align-items-center ms-3">
                        @await Html.PartialAsync("_TimeRangePartial", new { Prefix = "dust", OutlineColor = "warning", ActiveDays = 1 })
                    </div>
                    
                    <!-- ТИП ГРАФИКА -->
                    <div class="d-flex align-items-center ms-3">
                        <span class="text-muted me-2">Тип графика:</span>
                        <div class="btn-group" role="group" id="dustChartTypeRadio">
                            <input type="radio" class="btn-check" name="dustChartType" id="dustChartTypeLine" value="line" autocomplete="off" checked>
                            <label class="btn btn-outline-warning btn-sm" for="dustChartTypeLine">Линейный</label>
                            
                            <input type="radio" class="btn-check" name="dustChartType" id="dustChartTypeScatter" value="scatter" autocomplete="off">
                            <label class="btn btn-outline-warning btn-sm" for="dustChartTypeScatter">Точечный</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Вкладки PM / Technical -->
        <div class="row mb-3">
            <div class="col-md-12">
                <ul class="nav nav-tabs bsp-chart-nav-tabs" id="dustTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link bsp-chart-nav-link active bsp-chart-dust-tab" id="pm-tab" data-bs-toggle="tab" data-bs-target="#pm" type="button" role="tab">
                            <i class="fas fa-chart-line"></i> Концентрация PM
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link bsp-chart-nav-link bsp-chart-dust-tab" id="technical-tab" data-bs-toggle="tab" data-bs-target="#technical" type="button" role="tab">
                            <i class="fas fa-cogs"></i> Технические параметры
                        </button>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Панель параметров (меняется по вкладкам) -->
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="tab-content" id="dustTabsContent">
                    <div class="tab-pane fade show active" id="pm" role="tabpanel">
                        <div class="card">
                            <div class="card-header bg-light py-2">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-chart-line text-warning me-2"></i>
                                    <h6 class="mb-0">Параметры концентрации частиц</h6>
                                    <span class="ms-auto text-muted small">(выберите один параметр)</span>
                                </div>
                            </div>
                            <div class="card-body py-2">
                                <div class="row" id="dustPmRadios"></div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="technical" role="tabpanel">
                        <div class="card">
                            <div class="card-header bg-light py-2">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-cogs text-warning me-2"></i>
                                    <h6 class="mb-0">Технические параметры</h6>
                                    <span class="ms-auto text-muted small">(выберите один параметр)</span>
                                </div>
                            </div>
                            <div class="card-body py-2">
                                <div class="row" id="dustTechnicalRadios"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Диапазон дат и ползунок -->
        @await Html.PartialAsync("_DateRangeSectionPartial", new { Prefix = "dust", Color = "warning" })

        <!-- График -->
        <div id="dustChartsContainer">
            <div class="card">
                <div class="card-header bg-light py-2 d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-mixed text-warning"></i>
                        <span id="dustChartTitle">Концентрация частиц PM</span>
                    </h6>
                    <div class="d-flex align-items-center">
                        <span class="text-muted small me-2">Шкала:</span>
                        <span id="dustTimeScaleLabel" class="badge bg-secondary">авто</span>
                    </div>
                </div>
                <div class="card-body p-2">
                    <canvas id="dustChart" class="bsp-chart-canvas" style="height: 500px; width: 100%;"></canvas>
                </div>
            </div>
        </div>

        <!-- Статистика -->
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-light py-2">
                        <h6 class="mb-0"><i class="fas fa-info-circle text-warning"></i> Статистика</h6>
                    </div>
                    <div class="card-body py-2">
                        <div class="row" id="dustStatisticsContainer"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Индикатор загрузки -->
<div id="dustChartLoadingIndicator" class="text-center my-2 bsp-chart-loading-indicator" style="display: none;">
    <div class="spinner-border spinner-border-sm text-warning" role="status">
        <span class="visually-hidden">Загрузка...</span>
    </div>
    <span class="ms-2 text-muted small">Загрузка данных DUST...</span>
</div>

<script>
    $(document).ready(function() {
        if (typeof DUSTCharts !== 'undefined') {
            if (DUSTCharts.cleanup) DUSTCharts.cleanup();
            DUSTCharts.init(@sensorId);
            $(document).trigger('sensorChanged');
        } else {
            console.error('DUSTCharts не загружен!');
        }
    });
</script>