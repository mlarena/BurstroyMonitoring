@model BurstroyMonitoring.Data.Models.ViewModels.SensorViewModel

@{
    var sensorId = Model.Id;
}

                    @await Html.PartialAsync("_AutoUpdatePartial", new BurstroyMonitoring.Data.Models.ViewModels.AutoUpdateViewModel 
                    { 
                        Prefix = "iws", 
                        Color = "success" 
                    })
                    
                    <!-- ВЫБОР ПЕРИОДА -->
                    <div class="d-flex align-items-center ms-3">
                        @await Html.PartialAsync("_TimeRangePartial", new { Prefix = "iws", OutlineColor = "success", ActiveDays = 1 })
                    </div>
                    
                    <!-- ТИП ГРАФИКА -->
                    <div class="d-flex align-items-center ms-3">
                        <span class="text-muted me-2">Тип графика:</span>
                        <div class="btn-group" role="group" id="iwsChartTypeRadio">
                            <input type="radio" class="btn-check" name="iwsChartType" id="iwsChartTypeLine" value="line" autocomplete="off" checked>
                            <label class="btn btn-outline-success btn-sm" for="iwsChartTypeLine">Линейный</label>
                            
                            <input type="radio" class="btn-check" name="iwsChartType" id="iwsChartTypeScatter" value="scatter" autocomplete="off">
                            <label class="btn btn-outline-success btn-sm" for="iwsChartTypeScatter">Точечный</label>
                        </div>
                    </div>