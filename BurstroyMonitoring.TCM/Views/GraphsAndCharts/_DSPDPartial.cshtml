@model BurstroyMonitoring.Data.Models.ViewModels.SensorViewModel

@{
    var sensorId = Model.Id;
}

<div class="card bsp-chart-sensor-card" id="dspdContainer" data-sensor-id="@sensorId">
    <div class="card-header bg-success text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-road"></i> Датчик состояния дорожного полотна (DSPD)
            </h5>
            <span class="badge bg-light text-dark">
                <i class="fas fa-barcode"></i> @Model.SerialNumber
            </span>
        </div>
    </div>

    <div class="card-body">
        <!-- Компактная информация о сенсоре -->
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center bg-light p-2 rounded">
                    <!-- УДАЛЕНЫ: EndPointsName и MonitoringPostName -->
                    <div>
                        <i class="fas fa-clock text-success"></i>
                        <span id="dspdLastUpdateTime">Загрузка...</span>
                    </div>
                    <!-- АВТООБНОВЛЕНИЕ - используем новый компонент -->
                    @await Html.PartialAsync("_AutoUpdatePartial", new BurstroyMonitoring.Data.Models.ViewModels.AutoUpdateViewModel 
                    { 
                        Prefix = "dspd", 
                        Color = "success" 
                    })
                    
                    <!-- ВЫБОР ПЕРИОДА -->
                    <div class="d-flex align-items-center ms-3">
                        @await Html.PartialAsync("_TimeRangePartial", new { Prefix = "dspd", OutlineColor = "success", ActiveDays = 1 })
                    </div>
                    
                    <!-- ТИП ГРАФИКА -->
                    <div class="d-flex align-items-center ms-3">
                        <span class="text-muted me-2">Тип графика:</span>
                        <div class="btn-group" role="group" id="dspdChartTypeRadio">
                            <input type="radio" class="btn-check" name="dspdChartType" id="dspdChartTypeLine" value="line" autocomplete="off" checked>
                            <label class="btn btn-outline-success btn-sm" for="dspdChartTypeLine">Линейный</label>
                            
                            <input type="radio" class="btn-check" name="dspdChartType" id="dspdChartTypeScatter" value="scatter" autocomplete="off">
                            <label class="btn btn-outline-success btn-sm" for="dspdChartTypeScatter">Точечный</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Вкладки (только нужные) -->
        <div class="row mb-3">
            <div class="col-md-12">
                <ul class="nav nav-tabs bsp-chart-nav-tabs" id="dspdTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link bsp-chart-nav-link active" id="road-condition-tab" data-bs-toggle="tab" data-bs-target="#road-condition" type="button" role="tab">
                            <i class="fas fa-road"></i> Состояние дороги
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link bsp-chart-nav-link" id="precipitation-layer-tab" data-bs-toggle="tab" data-bs-target="#precipitation-layer" type="button" role="tab">
                            <i class="fas fa-cloud-rain"></i> Осадки на дороге
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link bsp-chart-nav-link" id="technical-tab" data-bs-toggle="tab" data-bs-target="#technical" type="button" role="tab">
                            <i class="fas fa-cogs"></i> Технические
                        </button>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Параметры по вкладкам -->
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="tab-content" id="dspdTabsContent">
                    <!-- Состояние дороги -->
                    <div class="tab-pane fade show active" id="road-condition" role="tabpanel">
                        <div class="card">
                            <div class="card-header bg-light py-2">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-road text-success me-2"></i>
                                    <h6 class="mb-0">Параметры состояния дороги</h6>
                                    <span class="ms-auto text-muted small">(выберите один параметр)</span>
                                </div>
                            </div>
                            <div class="card-body py-2">
                                <div class="row" id="dspdRoadConditionRadios"></div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Осадки на дороге -->
                    <div class="tab-pane fade" id="precipitation-layer" role="tabpanel">
                        <div class="card">
                            <div class="card-header bg-light py-2">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-cloud-rain text-success me-2"></i>
                                    <h6 class="mb-0">Параметры осадков на дороге</h6>
                                    <span class="ms-auto text-muted small">(выберите один параметр)</span>
                                </div>
                            </div>
                            <div class="card-body py-2">
                                <div class="row" id="dspdPrecipitationLayerRadios"></div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Технические параметры -->
                    <div class="tab-pane fade" id="technical" role="tabpanel">
                        <div class="card">
                            <div class="card-header bg-light py-2">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-cogs text-success me-2"></i>
                                    <h6 class="mb-0">Технические параметры датчика</h6>
                                    <span class="ms-auto text-muted small">(выберите один параметр)</span>
                                </div>
                            </div>
                            <div class="card-body py-2">
                                <div class="row" id="dspdTechnicalRadios"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Диапазон дат и ползунок -->
        @await Html.PartialAsync("_DateRangeSectionPartial", new { Prefix = "dspd", Color = "success" })

        <!-- Контейнер для графика -->
        <div id="dspdChartsContainer">
            <div class="card">
                <div class="card-header bg-light py-2 d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-line text-success"></i>
                        <span id="dspdChartTitle">Параметры DSPD</span>
                    </h6>
                    <div class="d-flex align-items-center">
                        <span class="text-muted small me-2">Шкала:</span>
                        <span id="dspdTimeScaleLabel" class="badge bg-secondary">авто</span>
                    </div>
                </div>
                <div class="card-body p-2">
                    <canvas id="dspdChart" class="bsp-chart-canvas" style="height: 500px; width: 100%;"></canvas>
                </div>
            </div>
        </div>

        <!-- Статистика -->
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-light py-2">
                        <h6 class="mb-0"><i class="fas fa-info-circle text-success"></i> Статистика по выбранному параметру</h6>
                    </div>
                    <div class="card-body py-2">
                        <div class="row" id="dspdStatisticsContainer">
                            <!-- Статистика будет добавлена через JavaScript -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Индикатор загрузки -->
<div id="dspdChartLoadingIndicator" class="text-center my-2 bsp-chart-loading-indicator" style="display: none;">
    <div class="spinner-border spinner-border-sm text-success" role="status">
        <span class="visually-hidden">Загрузка...</span>
    </div>
    <span class="ms-2 text-muted small">Загрузка данных DSPD...</span>
</div>

<!-- ИНИЦИАЛИЗАЦИЯ -->
<script>
    $(document).ready(function() {
        if (typeof DSPDCharts !== 'undefined') {
            if (DSPDCharts.cleanup) {
                DSPDCharts.cleanup();
            }
            DSPDCharts.init(@sensorId);
            $(document).trigger('sensorChanged');
        } else {
            console.error('DSPDCharts не загружен!');
        }
    });
</script>